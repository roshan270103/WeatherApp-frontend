@page "/weatherdashboard"
@inject Weatherfrontend.Services.FavoritesService FavoritesService
@inject Weatherfrontend.Services.AuthState AuthState
@inject HttpClient Http
@inject IJSRuntime JS

<div class="dashboard-container">

    <!-- Title + subtitle -->
    <div class="animate-fade-in">
        <h1 class="dashboard-title">🌤 Weather Dashboard</h1>
        <div class="dashboard-subtitle">View your favorites & explore forecasts</div>
    </div>

    <!-- Favorites chips -->
    <div class="glass-card favorites-box animate-pop-in">
        <h3>Your Favorites</h3>
        @if (favoriteCities.Count == 0)
        {
            <div class="no-fav">(No favorites yet)</div>
        }
        else
        {
            <div class="fav-chip-container">
                @foreach (var fav in favoriteCities)
                {
                    <div class="fav-chip">
                        <button class="fav-city" @onclick="() => OnFavoriteClick(fav)">@fav</button>
                        <span class="fav-remove" @onclick="() => RemoveFavorite(fav)">✕</span>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Search favorites -->
    <div class="search-hero animate-fade-in">
        <input class="search-input" @bind="city" placeholder="Enter city name..." />
        <button class="btn-search" @onclick="GetWeather">Search</button>
        <button class="btn-fav" @onclick="AddFavorite">Add Fav</button>
        <button class="btn-location" @onclick="@(async () => await ManualLocationLoad())">
            <span class="material-icons" style="vertical-align:middle;">my_location</span> Get My Location
        </button>
    </div>

    @if (currentWeather != null)
    {
        <!-- Dashboard weather display -->
        <div class="dashboard-hero animate-hero"
             style="background-image:
                                            linear-gradient(180deg, rgba(0,0,0,.25), rgba(0,0,0,.25)),
                                            url('@GetWeatherBackgroundImage()');">
            <div class="hero-left">
                <h1>@currentWeather.City</h1>
                <div class="hero-date">@DateTime.Now.ToString("dddd, MMM dd yyyy · hh:mm tt")</div>
                <div class="hero-info-row">
                    <div class="hero-info-pill">Wind @currentWeather.WindSpeed m/s</div>
                    <div class="hero-info-pill">@currentWeather.Description</div>
                </div>
            </div>
            <div class="hero-today">
                <img src="@($"https://openweathermap.org/img/wn/{currentWeather.IconId}@2x.png")" />
                <div class="temp">@currentWeather.Temp°C</div>
            </div>
        </div>
        <!-- Forecast -->
        <h3 class="forecast-title">5-Day Forecast</h3>
        <div class="forecast-grid">
            @foreach (var day in forecastList)
            {
                <div class="forecast-card animate-pop-in">
                    <div class="forecast-date">@day.Date.ToString("ddd")</div>
                    <img src="@($"https://openweathermap.org/img/wn/{day.IconId}@2x.png")" width="60" />
                    <div class="forecast-temp">@day.Temp°C</div>
                    <div class="forecast-desc">@day.Description</div>
                </div>
            }
        </div>

        <!-- Comparison Feature (below forecast) -->
        <div class="comparison-section glass-card animate-pop-in" style="margin-top:28px;">
            <h3 style="margin-bottom:1.3rem; color:#fff; font-size:1.38rem; font-weight:600;">Compare Two Cities</h3>
            <div class="compare-row" style="margin-bottom:1.1rem;">
                <div class="compare-input-group">
                    <input placeholder="City 1" @bind="city1" class="compare-input" autocomplete="off" />
                    <span class="dropdown-arrow" @onclick="() => ToggleFavDropdown(1)">▼</span>
                    @if (showFavDropdown1 && favoriteCities.Any())
                    {
                        <ul class="dropdown-list">
                            @foreach (var fav in favoriteCities)
                            {
                                <li @onclick="() => SelectFav(1, fav)">@fav</li>
                            }
                        </ul>
                    }
                </div>
                <div class="compare-input-group">
                    <input placeholder="City 2" @bind="city2" class="compare-input" autocomplete="off" />
                    <span class="dropdown-arrow" @onclick="() => ToggleFavDropdown(2)">▼</span>
                    @if (showFavDropdown2 && favoriteCities.Any())
                    {
                        <ul class="dropdown-list">
                            @foreach (var fav in favoriteCities)
                            {
                                <li @onclick="() => SelectFav(2, fav)">@fav</li>
                            }
                        </ul>
                    }
                </div>
                <button class="btn-compare-table" @onclick="CompareCities" disabled="@isComparing">Compare</button>
            </div>
            @if (compareWeather1 != null && compareWeather2 != null)
            {
                <table class="comparison-table" style="width:100%;text-align:center;">
                    <tr>
                        <th style="width:28%;"></th>
                        <th>@compareWeather1.City</th>
                        <th>@compareWeather2.City</th>
                    </tr>
                    <tr>
                        <td>Temperature</td>
                        <td>@compareWeather1.Temp&nbsp;°C</td>
                        <td>@compareWeather2.Temp&nbsp;°C</td>
                    </tr>
                    <tr>
                        <td>Condition</td>
                        <td>@compareWeather1.Description</td>
                        <td>@compareWeather2.Description</td>
                    </tr>
                    <tr>
                        <td>Wind</td>
                        <td>@compareWeather1.WindSpeed&nbsp;m/s</td>
                        <td>@compareWeather2.WindSpeed&nbsp;m/s</td>
                    </tr>
                </table>
            }
        </div>
    }

</div>

@if (!string.IsNullOrEmpty(popupMessage))
{
    <div class="popup">@popupMessage</div>
}

@code {
    private string city = "";
    private WeatherData? currentWeather;
    private List<ForecastData> forecastList = new();
    private List<string> favoriteCities = new();
    private string? popupMessage;

    private const string ApiKey = "898c51e8b3072bda4577b3aff97c30e7";

    // For comparison section
    private string city1 = "";
    private string city2 = "";
    private WeatherData? compareWeather1;
    private WeatherData? compareWeather2;
    private bool isComparing = false;

    // Dropdowns for compare inputs
    private bool showFavDropdown1 = false;
    private bool showFavDropdown2 = false;

    private void ToggleFavDropdown(int which)
    {
        if (which == 1)
        {
            showFavDropdown1 = !showFavDropdown1;
            showFavDropdown2 = false;
        }
        else
        {
            showFavDropdown2 = !showFavDropdown2;
            showFavDropdown1 = false;
        }
    }

    private void SelectFav(int which, string city)
    {
        if (which == 1)
        {
            city1 = city;
            showFavDropdown1 = false;
        }
        else
        {
            city2 = city;
            showFavDropdown2 = false;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(AuthState.UserId))
            favoriteCities = await FavoritesService.GetFavoritesAsync();
        await TryGeoLoadDashboard();
    }

    // On load: get user city and auto-search
    private async Task TryGeoLoadDashboard()
    {
        try
        {
            var coords = await JS.InvokeAsync<LatLong>("getGeolocation");
            var geoUrl = $"https://api.openweathermap.org/geo/1.0/reverse?lat={coords.Latitude}&lon={coords.Longitude}&limit=1&appid={ApiKey}";
            var geoResults = await Http.GetFromJsonAsync<List<GeoResult>>(geoUrl);
            var detectedCity = geoResults?.FirstOrDefault()?.name?.Split(' ')[0] ?? null;
            if (!string.IsNullOrWhiteSpace(detectedCity))
            {
                city = detectedCity;
                await GetWeather();
            }
        }
        catch
        {
            // Fail silent if denied.
        }
    }

    private async Task ManualLocationLoad()
    {
        try
        {
            var coords = await JS.InvokeAsync<LatLong>("getGeolocation");
            var geoUrl = $"https://api.openweathermap.org/geo/1.0/reverse?lat={coords.Latitude}&lon={coords.Longitude}&limit=1&appid={ApiKey}";
            var geoResults = await Http.GetFromJsonAsync<List<GeoResult>>(geoUrl);
            var detectedCity = geoResults?.FirstOrDefault()?.name?.Split(' ')[0] ?? null;
            if (!string.IsNullOrWhiteSpace(detectedCity))
            {
                city = detectedCity;
                await GetWeather();
            }
            else
            {
                popupMessage = "Could not determine your city from location.";
            }
        }
        catch
        {
            popupMessage = "Could not access your location permission.";
        }
    }

    private async Task GetWeather()
    {
        if (string.IsNullOrWhiteSpace(city))
        {
            ShowPopup("⚠️ Enter a city name first!");
            return;
        }

        await GetCurrentWeather();
        await GetForecast();
    }

    private async Task GetCurrentWeather()
    {
        try
        {
            var url = $"https://api.openweathermap.org/data/2.5/weather?q={city}&appid={ApiKey}&units=metric";
            var data = await Http.GetFromJsonAsync<WeatherApiResponse>(url);

            if (data != null)
            {
                currentWeather = new WeatherData
                {
                    City = data.Name,
                    Temp = data.Main.Temp,
                    Description = data.Weather[0].Description,
                    IconId = data.Weather[0].Icon,
                    WindSpeed = data.Wind.Speed,
                    Main = data.Weather[0].Main
                };
            }
        }
        catch
        {
            ShowPopup("❌ City not found");
            currentWeather = null;
            forecastList.Clear();
        }
    }

    private async Task GetForecast()
    {
        try
        {
            var url = $"https://api.openweathermap.org/data/2.5/forecast?q={city}&appid={ApiKey}&units=metric";
            var forecast = await Http.GetFromJsonAsync<ForecastApiResponse>(url);

            forecastList = forecast?.List
                .Where((x, i) => i % 8 == 0)
                .Take(5)
                .Select(x => new ForecastData
                {
                    Date = DateTime.Parse(x.Dt_txt),
                    Temp = x.Main.Temp,
                    Description = x.Weather[0].Description,
                    IconId = x.Weather[0].Icon
                })
                .ToList() ?? new();
        }
        catch
        {
            forecastList.Clear();
        }
    }

    // Comparison section logic
    private async Task CompareCities()
    {
        isComparing = true;
        compareWeather1 = await FetchWeatherForComparison(city1);
        compareWeather2 = await FetchWeatherForComparison(city2);
        isComparing = false;
    }
    private async Task<WeatherData?> FetchWeatherForComparison(string cityName)
    {
        try
        {
            var url = $"https://api.openweathermap.org/data/2.5/weather?q={cityName}&appid={ApiKey}&units=metric";
            var data = await Http.GetFromJsonAsync<WeatherApiResponse>(url);

            if (data != null)
            {
                return new WeatherData
                {
                    City = data.Name,
                    Temp = data.Main.Temp,
                    Description = data.Weather[0].Description,
                    WindSpeed = data.Wind.Speed,
                    Main = data.Weather[0].Main,
                    IconId = data.Weather[0].Icon
                };
            }
        }
        catch
        {
        }
        return null;
    }

    private string GetWeatherBackgroundImage()
    {
        if (currentWeather == null) return "/images/weather/cloudy.jpg";

        var desc = (currentWeather.Description ?? "").ToLowerInvariant();
        var main = (currentWeather.Main ?? "").ToLowerInvariant();

        if (desc.Contains("rain") || main == "rain" || main == "drizzle") return "/images/weather/rainy.jpg";
        if (desc.Contains("cloud") || main == "clouds") return "/images/weather/cloudy.jpg";
        if (desc.Contains("clear") || main == "clear" || desc.Contains("sun")) return "/images/weather/sunny.jpg";
        if (desc.Contains("snow") || main == "snow") return "/images/weather/snowy.jpg";
        if (desc.Contains("fog") || desc.Contains("mist") || desc.Contains("haze")) return "/images/weather/foggy.jpg";
        if (desc.Contains("storm") || desc.Contains("thunder") || main == "thunderstorm") return "/images/weather/storm.jpg";

        return "/images/weather/cloudy.jpg";
    }

    private async Task AddFavorite()
    {
        if (string.IsNullOrWhiteSpace(city))
        {
            ShowPopup("⚠️ Enter a city first!");
            return;
        }

        var result = await FavoritesService.AddFavoriteAsync(city);

        if (!result.Success)
        {
            ShowPopup(result.Error ?? "❌ Failed to add favorite");
        }
        else
        {
            ShowPopup($"✅ Added {city}");
            favoriteCities = await FavoritesService.GetFavoritesAsync();
        }
    }

    private async Task RemoveFavorite(string fav)
    {
        var ok = await FavoritesService.RemoveFavoriteAsync(fav);
        if (ok)
        {
            ShowPopup($"🗑 Removed {fav}");
            favoriteCities = await FavoritesService.GetFavoritesAsync();
        }
    }

    private async Task OnFavoriteClick(string fav)
    {
        city = fav;
        await GetWeather();
        await GetForecast();
    }

    private void ShowPopup(string message)
    {
        popupMessage = message;
        StateHasChanged();

        _ = Task.Run(async () =>
        {
            await Task.Delay(2500);
            popupMessage = null;
            StateHasChanged();
        });
    }

    // Models
    private class WeatherData
    {
        public string City { get; set; } = "";
        public double Temp { get; set; }
        public string Description { get; set; } = "";
        public string IconId { get; set; } = "";
        public double WindSpeed { get; set; }
        public string Main { get; set; } = "";
    }
    private class ForecastData
    {
        public DateTime Date { get; set; }
        public double Temp { get; set; }
        public string Description { get; set; } = "";
        public string IconId { get; set; } = "";
    }
    private class WeatherApiResponse
    {
        public string Name { get; set; } = "";
        public MainData Main { get; set; } = new();
        public List<WeatherCondition> Weather { get; set; } = new();
        public WindData Wind { get; set; } = new();
    }
    private class ForecastApiResponse { public List<ForecastItem> List { get; set; } = new(); }
    private class ForecastItem { public MainData Main { get; set; } = new(); public List<WeatherCondition> Weather { get; set; } = new(); public string Dt_txt { get; set; } = ""; }
    private class MainData { public double Temp { get; set; } }
    private class WeatherCondition { public string Main { get; set; } = ""; public string Description { get; set; } = ""; public string Icon { get; set; } = ""; }
    private class WindData { public double Speed { get; set; } }
    private class LatLong { public double Latitude { get; set; } public double Longitude { get; set; } }
    private class GeoResult { public string name { get; set; } }
    
}
